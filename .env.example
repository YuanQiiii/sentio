# Sentio AI Configuration Template
# Copy to .env and fill with actual values
# WARNING: Contains sensitive credentials - DO NOT commit to version control

# ========================
# Core Configuration
# ========================

# Server Settings
SENTIO_SERVER__HOST=127.0.0.1
SENTIO_SERVER__PORT=8080
SENTIO_SERVER__WORKERS=4

# Debug Mode (development only)
SENTIO_DEBUG_MODE=false

# ========================
# Email Configuration
# ========================

# SMTP Settings
SENTIO_EMAIL__SMTP__HOST=smtp.example.com
SENTIO_EMAIL__SMTP__PORT=587
SENTIO_EMAIL__SMTP__USERNAME=your-email@example.com
SENTIO_EMAIL__SMTP__PASSWORD=your-smtp-password
SENTIO_EMAIL__SMTP__USE_TLS=true

# ========================
# LLM Configuration
# ========================

SENTIO_LLM__PROVIDER=deepseek
SENTIO_LLM__API_KEY=your-deepseek-api-key
SENTIO_LLM__BASE_URL=https://api.deepseek.com
SENTIO_LLM__MODEL=deepseek-chat
SENTIO_LLM__TIMEOUT=120
SENTIO_LLM__MAX_RETRIES=3

# ========================
# Telemetry & Logging
# ========================

SENTIO_TELEMETRY__LOG_LEVEL=info
SENTIO_TELEMETRY__CONSOLE=true
SENTIO_TELEMETRY__JSON_FORMAT=false
SENTIO_TELEMETRY__LOG_FILE=

# ========================
# Storage Configuration
# ========================
# Using in-memory storage - no configuration needed

# ========================
# Additional Config
# ========================

# Prompt configuration path
SENTIO_CONFIG_PATH=config/prompts.yaml
