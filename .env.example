# Sentio AI 邮件伙伴系统环境变量配置示例
# 复制此文件为 .env 并填入真实的配置值

# 数据库配置
SENTIO_DATABASE_URL=mongodb://localhost:27017/sentio
SENTIO_DATABASE_MAX_CONNECTIONS=10

# 邮件配置 - SMTP
SENTIO_EMAIL_SMTP_HOST=smtp.gmail.com
SENTIO_EMAIL_SMTP_PORT=587
SENTIO_EMAIL_SMTP_USERNAME=your-email@example.com
SENTIO_EMAIL_SMTP_PASSWORD=your-app-password
SENTIO_EMAIL_SMTP_USE_TLS=true

# LLM API 配置
SENTIO_LLM_PROVIDER=deepseek
SENTIO_LLM_API_KEY=your-deepseek-api-key
SENTIO_LLM_BASE_URL=https://api.deepseek.com
SENTIO_LLM_MODEL=deepseek-chat
SENTIO_LLM_TIMEOUT=120
SENTIO_LLM_MAX_RETRIES=3

# 遥测配置
SENTIO_TELEMETRY_LOG_LEVEL=info
SENTIO_TELEMETRY_CONSOLE=true
SENTIO_TELEMETRY_JSON_FORMAT=false

# 服务器配置
SENTIO_SERVER_HOST=127.0.0.1
SENTIO_SERVER_PORT=8080
SENTIO_SERVER_WORKERS=4
